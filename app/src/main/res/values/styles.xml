<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Font style for title-->
    <style name="titleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="contentTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="spinnerStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:dropDownVerticalOffset">30dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:popupBackground">#f0000000</item>
    </style>

    <style name="switchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>
    <style name="trackStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="spinnerDropdownStyle" parent="android:Widget.Spinner.DropDown">
        <!-- 分隔线颜色 -->
        <item name="android:divider">#00ff00</item>
        <item name="android:dividerHeight">1dp</item>
        <!-- item按下效果 -->
        <!--        <item name="android:listSelector">@color/colorGrey</item>-->
    </style>
</resources>
